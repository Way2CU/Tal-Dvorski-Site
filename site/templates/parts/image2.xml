<document>
	<a
		href="$params['image']"
		class="image direct"
		cms:eval="href"
		>
		<span>
			<img
				src="gallery::getThumbnailById($params['id'], null, 250 ,Thumbnail::CONSTRAIN_HEIGHT)"
				alt="$params['title'][$language]"
				cms:eval="src,alt"
				/>
		</span>
		<p><cms:var param="title" multilanguage="yes"/></p>
	</a>
</document>